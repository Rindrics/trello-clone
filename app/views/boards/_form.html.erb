
<%= form_with model: @board do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @board.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <% if @board.persisted? %>
    <div class="status">
      <%= form.label :status, "status" %><br>
      <%= form.select :status, Visible::VALID_STATUSES, selected: @board.status %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
